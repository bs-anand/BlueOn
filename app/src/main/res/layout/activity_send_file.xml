<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_file"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kontham.blueon.sendFileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="false"
        android:src="@drawable/b_bluetooth"
        android:cropToPadding="false" />


    <TextView android:layout_height="wrap_content"
        android:id="@+id/sendStatus"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:padding="8dp"
        android:text="Please select file"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/sendDirectly"
        android:text="Send file"
        android:layout_below="@+id/select"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:alpha="0.85"/>

    <Button android:layout_height="wrap_content"
        android:id="@+id/select"
        android:layout_width="fill_parent"
        android:text="Select file"
        android:layout_below="@+id/sendStatus"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:alpha="0.85"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
